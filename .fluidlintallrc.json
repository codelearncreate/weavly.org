{
    "eslint": {
        "js": {
            "includes": ["./.eleventy.js"]
        }
    },
    "lintspaces": {
        "jsonindentation": {
            "excludes": [
                "./src/_data/*.json",
                "./package.json"
            ]
        },
        "newlines": {
            "excludes": [
                "*.ico",
                "*.jpg",
                "*.jpeg",
                "*.png",
                "*.webp",
                "*.pdf",
                "*.docx",
                "*.pptx",
                "*.gif",
                "*.zip",
                "./src/_data/*.json",
                "./src/activities/*.md",
                "./src/robot-activities/*.md",
                "./src/projects/*.md",
                "./src/resources/*.md",
                "./src/*.md",
                "./CHANGELOG.md"
            ]
        }
    },
    "markdownlint": {
        "excludes": [
            "./src/activities/*.md",
            "./src/robot-activities/*.md",
            "./src/projects/*.md",
            "./src/resources/*.md",
            "./src/*.md",
            "./CHANGELOG.md"
        ]
    }
}
